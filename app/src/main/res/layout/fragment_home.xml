<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


    <TextView
        android:id="@+id/hello_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Hello User Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_horizontal_container"
        app:layout_constraintTop_toBottomOf="@+id/hello_text_view"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/gunun_programi_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Günün Programı"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/gunun_programi_image_view"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gunun_programi_text_view"
                android:src="@drawable/boyun_agrisi" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/egzersiz_yuzdesi_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_horizontal_container"
        android:gravity="center"
        android:text="Egzersiz Tamamlama Yüzdesi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <ProgressBar
        android:id="@+id/egzersiz_yuzdesi_progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_horizontal_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/egzersiz_yuzdesi_text_view" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/egzersiz_yuzdesi_progressbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/day_1_image_view"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:layout_constraintEnd_toStartOf="@+id/day_2_image_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/boyun_agrisi" />

            <ImageView
                android:id="@+id/day_2_image_view"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:layout_constraintEnd_toStartOf="@+id/day_3_image_view"
                app:layout_constraintStart_toEndOf="@+id/day_1_image_view"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/boyun_agrisi" />

            <ImageView
                android:id="@+id/day_3_image_view"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:layout_constraintEnd_toStartOf="@+id/day_4_image_view"
                app:layout_constraintStart_toEndOf="@+id/day_2_image_view"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/boyun_agrisi" />

            <ImageView
                android:id="@+id/day_4_image_view"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:layout_constraintEnd_toStartOf="@+id/day_5_image_view"
                app:layout_constraintStart_toEndOf="@+id/day_3_image_view"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/boyun_agrisi" />

            <ImageView
                android:id="@+id/day_5_image_view"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:layout_constraintEnd_toStartOf="@+id/day_6_image_view"
                app:layout_constraintStart_toEndOf="@+id/day_4_image_view"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/boyun_agrisi" />

            <ImageView
                android:id="@+id/day_6_image_view"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:layout_constraintEnd_toStartOf="@+id/day_7_image_view"
                app:layout_constraintStart_toEndOf="@+id/day_5_image_view"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/boyun_agrisi" />

            <ImageView
                android:id="@+id/day_7_image_view"
                android:layout_width="0dp"
                android:layout_height="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/day_6_image_view"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/boyun_agrisi" />

            <TextView
                android:id="@+id/day_1_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLength="4"
                android:text="Pazartesi"
                app:layout_constraintEnd_toEndOf="@id/day_1_image_view"
                app:layout_constraintStart_toStartOf="@id/day_1_image_view"
                app:layout_constraintTop_toBottomOf="@id/day_1_image_view" />

            <TextView
                android:id="@+id/day_2_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLength="4"
                android:text="Pazartesi"
                app:layout_constraintEnd_toEndOf="@id/day_2_image_view"
                app:layout_constraintStart_toStartOf="@id/day_2_image_view"
                app:layout_constraintTop_toBottomOf="@id/day_2_image_view" />

            <TextView
                android:id="@+id/day_3_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLength="4"
                android:text="Pazartesi"
                app:layout_constraintEnd_toEndOf="@id/day_3_image_view"
                app:layout_constraintStart_toStartOf="@id/day_3_image_view"
                app:layout_constraintTop_toBottomOf="@id/day_3_image_view" />

            <TextView
                android:id="@+id/day_4_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLength="4"
                android:text="Pazartesi"
                app:layout_constraintEnd_toEndOf="@id/day_4_image_view"
                app:layout_constraintStart_toStartOf="@id/day_4_image_view"
                app:layout_constraintTop_toBottomOf="@id/day_4_image_view" />

            <TextView
                android:id="@+id/day_5_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLength="4"
                android:text="Pazartesi"
                app:layout_constraintEnd_toEndOf="@id/day_5_image_view"
                app:layout_constraintStart_toStartOf="@id/day_5_image_view"
                app:layout_constraintTop_toBottomOf="@id/day_5_image_view" />

            <TextView
                android:id="@+id/day_6_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLength="4"
                android:text="Pazartesi"
                app:layout_constraintEnd_toEndOf="@id/day_6_image_view"
                app:layout_constraintStart_toStartOf="@id/day_6_image_view"
                app:layout_constraintTop_toBottomOf="@id/day_6_image_view" />

            <TextView
                android:id="@+id/day_7_text_view"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLength="4"
                android:text="Pazartesi"
                app:layout_constraintEnd_toEndOf="@id/day_7_image_view"
                app:layout_constraintStart_toStartOf="@id/day_7_image_view"
                app:layout_constraintTop_toBottomOf="@id/day_7_image_view" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/professional_support_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profesyonelden Destek Al"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>


